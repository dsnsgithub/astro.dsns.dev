---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import scheduliIcon from "../assets/schedule.svg";
import onlyEggrollsIcon from "../assets/eggrolls.svg";
import { Icon } from "astro-icon/components";
import DiscordStatus from "../components/DiscordStatus.svelte";
import RecentProjects from "../components/RecentProjects.svelte";
---

<Layout title="dsns.dev" description="Check out what I do, and explore some of my projects.">
	<div class="container px-6 md:px-8 lg:px-10 xl:px-48 mx-auto flex flex-col gap-10">
		<div class="flex flex-col lg:flex-row gap-6 lg:gap-12 items-center">
			<div class="flex flex-col gap-4 basis-1/3">
				<div class="bg-viola-100 rounded-lg p-8 m-2 shadow-lg">
					<h2 class="text-2xl font-bold mb-4">Who am I?</h2>
					<p>A full-stack developer with an interest in Minecraft.</p>
				</div>

				<div class="bg-viola-100 rounded-lg p-8 m-2 shadow-lg">
					<h2 class="text-2xl font-bold mb-4">Skills</h2>
					<div class="flex flex-row justify-evenly">
						<Icon name="mdi:language-javascript" class="text-2xl text-viola-900" title="JavaScript" aria-label="JavaScript" />
						<Icon name="mdi:language-python" class="text-2xl text-viola-900" title="Python" aria-label="Python" />
						<Icon name="mdi:language-java" class="text-2xl text-viola-900" title="Java" aria-label="Java" />
						<Icon name="mdi:git" class="text-2xl text-viola-900" title="Git" aria-label="Git" />
						<Icon name="fa6-brands:react" class="text-2xl text-viola-900" title="React" aria-label="React" />
					</div>
				</div>

				<DiscordStatus client:idle/>
			</div>
			<div class="bg-viola-100 rounded-lg p-8 m-2 shadow-lg basis-2/3">
				<h2 class="text-2xl font-bold mb-4">Projects</h2>

				<div class="flex flex-col gap-4">
					<a
						href="https://scheduli.dsns.dev/"
						class="flex flex-col sm:flex-row rounded-xl shadow-lg p-8 items-center gap-10 bg-viola-50 hover:transition duration-500 hover:duration-500 hover:scale-[1.01]"
					>
						<Image
							src={scheduliIcon}
							alt="Scheduli Icon"
							width={96}
							class="rounded-xl p-4 bg-[#ddeff0] w-[96px] md:w-[128px] h-[96px] md:h-[128px] basis-1/5 aspect-square"
							loading={"eager"}
						/>

						<div class="flex flex-col basis-4/5">
							<p class="text-xl font-bold mb-2">Scheduli</p>
							<div>An app to track complicated school schedules, even during the most chaotic days.</div>
						</div>
					</a>
					<a
						href="https://onlyeggrolls.com/"
						class="flex flex-col sm:flex-row rounded-xl shadow-lg p-8 items-center gap-10 bg-viola-50 hover:transition duration-500 hover:duration-500 hover:scale-[1.01]"
					>
						<Image
							src={onlyEggrollsIcon}
							alt="OnlyEggrolls Icon"
							width={120}
							class="rounded-xl p-2 bg-white w-[96px] md:w-[128px] h-[96px] md:h-[128px] basis-1/5 aspect-square"
							loading={"eager"}
						/>

						<div class="flex flex-col basis-4/5">
							<p class="text-xl font-bold mb-2">Only Eggrolls</p>
							<p>A proof-of-concept online store built completely in vanilla JavaScript.</p>
						</div>
					</a>
				</div>
			</div>
		</div>

		<div class="bg-viola-100 rounded-lg p-6 px-4 md:px-6 lg:p-8 m-2 shadow-lg">
			<h2 class="text-2xl font-bold mb-4">Recently Updated Projects</h2>
			<div
				class="scrollbar scrollbar-thumb-rounded-full scrollbar-track-rounded-full scrollbar-thumb-viola-300 scrollbar-track-viola-200 scrollbar-w-2 overflow-y-scroll max-h-[100vw] lg:max-h-[30vw]"
			>
				<RecentProjects client:idle />
			</div>
		</div>
	</div>
</Layout>
